{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "features/**/*.ts",
    "android/**/*.ts",
    "src/**/*.ts",
    "repository/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}